{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run-emrun-server",
            "type": "process",
            "command": "emrun",
            "args": ["--no_browser", "--port", "8080", "build/emscripten-debug/index.html"],
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Now listening",
                    "endsPattern": "Now listening"
                }
            }
        },
        {
            "label": "kill-emrun-server",
            "type": "shell",
            "command": "pkill -f emrun"
        }
    ]
}
