{
    "version": 7,
    "configurePresets": [
        {
            "name": "vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                // ここは vcpkg のみを唯一の toolchain とする
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
                "CMAKE_MAKE_PROGRAM": "ninja"
            }
        },
        {
            "name": "emscripten-debug",
            "displayName": "Emscripten Debug",
            "inherits": "vcpkg",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/emscripten-debug",
            "environment": {
                "EMSDK": "$env{HOME}/emsdk",
                "EMSCRIPTEN": "$env{HOME}/emsdk/upstream/emscripten",
                "PATH": "/opt/homebrew/bin:$penv{PATH}"
            },
            // 注意: ここで独自の toolchainFile は使わない(vcpkg に一本化）
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                // ★ 最重要: Emscripten を vcpkg にチェーン
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSCRIPTEN}/cmake/Modules/Platform/Emscripten.cmake",
                // ★ wasm 用トリプレット(vcpkg が wasm 用に解決）
                "VCPKG_TARGET_TRIPLET": "wasm32-emscripten",
                "CMAKE_CXX_COMPILER": "$env{EMSCRIPTEN}/em++"
            }
        },
        {
            "name": "emscripten-release",
            "inherits": "emscripten-debug",
            "displayName": "Emscripten Release",
            "binaryDir": "${sourceDir}/build/emscripten-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        { "name": "emscripten-debug", "configurePreset": "emscripten-debug" },
        { "name": "emscripten-release", "configurePreset": "emscripten-release" },
        { "name": "vcpkg", "configurePreset": "vcpkg" }
    ]
}
